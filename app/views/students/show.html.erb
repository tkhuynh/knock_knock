<br><br>
<div class="container">
	<div class="row">
		<div class="col-lg-12 text-center">
			<h2 class="section-heading">
			<div class="well">
				<h4>Paper clip uploader feat here</h4>
				<%= image_tag @student.image.url(:thumb) %>
				<h2><%= @student.name %></h2>
				<% if current_user == @student %>
					<%= link_to 'Edit Profile', edit_user_path(current_user), class: "btn btn-primary" %>
				<%= link_to 'Delete Profile', user_path(current_user), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
				<%= link_to "Book a Meeting", tas_path, class: "btn btn-primary" %>
				<% end %>
				<% @student.meetings.each do |meeting| %>

				<br><br>
				<div class="row">
					<div class="col-sm-6 col-md-4">
						<div class="thumbnail">
							<div class="caption">
								<h3><%= link_to meeting.subject %></h3>
								<h4><strong>Date:</strong> <%= meeting.start_time.to_date %></h3>
								<h4><strong>Start:</strong> <%= meeting.start_time.hour %>:<%= meeting.start_time.min %></h4>
								<h4><strong>End:</strong> <%= meeting.end_time.hour %>:<%= meeting.end_time.min %></h4>

								<div class="calendar_button">
<a target="_blank" href="https://www.google.com/calendar/render?action=TEMPLATE&text=<%= meeting.subject %>&dates=<%= meeting.start_time.iso8601.gsub(/[^a-z0-9\s]/i, '') %>/<%= meeting.end_time.iso8601.gsub(/[^a-z0-9\s]/i, '') %>&details=For+details,+link+here:+http://www.wdi-knock-knock-herokuapp.com&location=General+Assembly&sf=true&output=xml">
	<img src="http://icons.iconarchive.com/icons/dtafalonso/android-lollipop/512/calendar-icon.png" style="width:50px;height:50px;">
</a>

</div>

								<% if current_user == @student %>
									<%= link_to "Cancel", meeting, method: :delete, class: "btn btn-danger" %>
								<% end %>
							</div>
						</div>
					</div>
				</div>
				<% end %>
			</div>
			<hr class="primary">
		</div>
	</div>
</div>

