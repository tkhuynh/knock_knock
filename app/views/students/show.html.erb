<br><br>
<div class="container">
	<div class="row">
		<div class="col-lg-12 text-center">
			<h2 class="section-heading">
			<div class="well">
				<h4>Paper clip uploader feat here</h4>
				<%= image_tag @student.image.url(:thumb) %>
				<h2><%= @student.name %></h2>
				<% if current_user == @student %>
					<%= link_to 'Edit Profile', edit_user_path(current_user), class: "btn btn-primary" %>
				<%= link_to 'Delete Profile', user_path(current_user), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
				<%= link_to "Book a Meeting", tas_path, class: "btn btn-primary" %>
				<% end %>
				<% @student.meetings.each do |meeting| %>
				<br><br>
				<div class="row">
					<div class="col-sm-6 col-md-4">
						<div class="thumbnail">
							<div class="caption">
								<h3><%= link_to meeting.subject %></h3>
								<h4><strong>Date:</strong> <%= meeting.start_time.to_date %></h3>
								<h4><strong>Start:</strong> <%= meeting.start_time.hour %>:<%= meeting.start_time.min %></h4>
								<h4><strong>End:</strong> <%= meeting.end_time.hour %>:<%= meeting.end_time.min %></h4>
								<%= link_to "Cancel", meeting, method: :delete, class: "btn btn-danger" %>
							</div>
						</div>
					</div>
				</div>
				<% end %>
			</div>
			<hr class="primary">
		</div>
	</div>
</div>