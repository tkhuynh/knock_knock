<div class="container">
  <div class="row">
      <div class='col-sm-6'>
      		<%= form_for @meeting do |f| %>
            <% if action_name == "edit" %>
              <div class="form-group">
              	<%= f.label :start_time %>
                <div class='input-group date' id='datetimepicker_start'>
                  <%= f.datetime_field :start_time, value: @meeting.start_time.localtime, type: 'text', class: "form-control" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
              <div class="form-group">
             		<%= f.label :end_time %>
                <div class='input-group date' id='datetimepicker_end'>
                  <%= f.datetime_field :end_time, value: @meeting.end_time.localtime,type: 'text', class: "form-control" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
            <% else %>
              <div class="form-group">
                <%= f.label :start_time %>
                <div class='input-group date' id='datetimepicker_start'>
                  <%= f.datetime_field :start_time, type: 'text', class: "form-control" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :end_time %>
                <div class='input-group date' id='datetimepicker_end'>
                  <%= f.datetime_field :end_time, type: 'text', class: "form-control" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
            <% end %>
            <div class="form-group">
            	<%= f.submit "Submit", class: "btn btn-primary" %>
              <%= link_to "Cancel", ta_path(@ta), class: "btn btn-secondary" %>
            </div>
          <% end %>
      </div>
  </div>
</div>
